---
interface Props {
    product: Product;
}

const { product } = Astro.props;

const safePrice = Number(product.precio || 0);

// Generamos el link de WhatsApp una sola vez en el servidor
const waMessage = encodeURIComponent(`Hola, me interesa el repuesto: ${product.nombre} (Ref: ${product.codigo})`);
const waLink = `https://wa.me/?text=${waMessage}`;
---

<section class="snap-section relative w-full h-full overflow-hidden">
    <picture class="absolute inset-0">
        <img 
          alt={product.nombre} 
          class="h-full w-full object-cover" 
          src={product.imagen_url}
          loading="lazy"
        />
        <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/20 to-transparent"></div>
    </picture>
    <div class="absolute top-1 right-4 border-2 rounded-2xl p-1 w-20 h-fit 
      bg-black/50 backdrop-blur-md flex items-center justify-center">
        <span class="text-xl font-bold text-white/90 drop-shadow-sm">
            ${safePrice.toFixed(2)}
        </span>
    </div>
    <div class="absolute bottom-20 left-4 right-4 animate-fade-in-up bg-black/30">
        <div class="glass-morphism text-white transform transition-all duration-300">
            <article class="flex justify-between items-start mb-2">
                <h2 class="md:text-2xl font-extrabold tracking-tight drop-shadow-sm">{product.nombre}</h2>
            </article>
            <article class="flex justify-between flex-wrap gap-2">
                <p class="text-xs font-medium leading-relaxed text-white/80">
                    {product.categoria} - Ref: {product.codigo_oem}
                </p>
                <p class="text-xs font-medium leading-relaxed text-white/80">
                    Marca: {product.marca} - Modelo: {product.modelo}
                </p>
            </article>

            
        </div>
    </div>
    <div class="absolute bottom-1 left-5 right-5 flex items-center justify-between mx-auto w-[90%]">
        <a href={waLink} target="_blank" class="flex flex-col items-center gap-1 group 
            rounded-2xl p-1">
          <div class="flex size-12 items-center justify-center rounded-2xl bg-green-400 text-white 
            shadow-lg shadow-green-400/20 group-active:scale-90 transition-transform">
            <svg class="size-6 fill-current" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.438 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
            </svg>
          </div>
          <span class="text-[10px] text-green-400 font-bold uppercase tracking-wider">WhatsApp</span>
        </a>

        <button class="flex flex-col items-center gap-1 group share-button p-1 rounded-2xl"
          data-title={product.nombre}
          data-id={product.codigo}
        >
        
            <picture>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#ffffff"
                    stroke-width="1"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    >
                    <path d="M6 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                    <path d="M18 6m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                    <path d="M18 18m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                    <path d="M8.7 10.7l6.6 -3.4" />
                    <path d="M8.7 13.3l6.6 3.4" />
                </svg>
            </picture>
          <span class="text-[10px] font-bold uppercase tracking-wider text-white">Compartir</span>
        </button>
    </div>
</section>


<style>
    .glass-morphism{
        backdrop-filter: blur(10px);
        padding: 0.75rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        background-clip: padding-box;
        background-color: rgba(203, 205, 200, 0.1);
    }
</style>

<script>
    // Este script se ejecuta una sola vez para todos los botones
    const shareButtons = document.querySelectorAll('.share-button');

    shareButtons.forEach(button => {
        button.addEventListener('click', async () => {
        const title = button.getAttribute('data-title');
        const id = button.getAttribute('data-id');
        
        if (navigator.share) {
            try {
            await navigator.share({
                title: `Repuesto: ${title}`,
                text: `Mira este repuesto que encontré: ${title} (Ref: ${id})`,
                url: window.location.href, // O un link específico si lo tienes
            });
            } catch (err) {
            console.log("Error al compartir", err);
            }
        } else {
            alert("Tu navegador no soporta compartir directamente.");
        }
        });
    });
</script>
